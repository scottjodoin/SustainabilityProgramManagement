@page
@model SustainabilityProgramManagement.Pages.Programs.DetailsModel
@using SustainabilityProgramManagement.Models

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sustainability Program</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SustainabilityProgram.ProgramName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SustainabilityProgram.ProgramName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SustainabilityProgram.Abbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SustainabilityProgram.Abbreviation)
        </dd>
    </dl>
</div>
<p>
    <a asp-page="./Edit" asp-route-id="@Model.SustainabilityProgram.SustainabilityProgramId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</p>

<div>
    <h4>Staff Associated with this Program</h4>
    <hr />
    <ul>
        @foreach (var staffMember in ViewBag.AssociatedStaffMembers)
        {
            <li>
                <a asp-page="/Staff/Details" asp-route-id="@staffMember.StaffMemberId">
                    @($"{staffMember.FirstName} {staffMember.LastName}")
                </a>
            </li>
        }
        @if (((List<StaffMember>)ViewBag.AssociatedStaffMembers).Count() == 0)
        {
            <li>No staff found</li>
        }
    </ul>
</div>

<div>
    <h4>Projects Associated with this Program</h4>
    <hr />
    <ul>
        @foreach (var project in ViewBag.AssociatedProjects)
        {
            <li>
                <a asp-page="/Projects/Details" asp-route-id="@project.ProjectId">
                    @($"{project.ProjectName}")
                </a>
            </li>
        }
        @if (((List<Project>)ViewBag.AssociatedProjects).Count() == 0)
        {
            <li>None found</li>
        }
    </ul>
</div>