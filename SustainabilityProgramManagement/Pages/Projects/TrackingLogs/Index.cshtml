@page
@model SustainabilityProgramManagement.Pages.Projects.TrackingLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td></td>
            <th>
                @Html.DisplayNameFor(model => model.TrackingLog[0].StaffMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingLog[0].Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingLog[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingLog[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = ViewBag.StartIndex;}
        @foreach (var item in Model.TrackingLog)
        {
        <tr>
            <td>
                @(i++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffMember.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrackingLogId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrackingLogId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrackingLogId">Delete</a>
            </td>
        </tr>
            

        }
    </tbody>
</table>
